{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "description": "Express + TypeScript backend with Groq Llama3 chatbot service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "dev:debug": "NODE_OPTIONS=--inspect ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts"
  },
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "groq-sdk": "^0.5.0",
    "pino": "^9.3.2",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.14.10",
    "@types/swagger-ui-express": "^4.1.7",
    "openapi-types": "^12.1.3",
    "pino-pretty": "^11.2.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
